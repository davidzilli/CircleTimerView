<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <com.bravebeard.circletimerview.CircleTimerView
        android:id="@+id/blue_timer"
        android:layout_width="200dp"
        android:layout_height="200dp" />

    <com.bravebeard.circletimerview.CircleTimerView
        android:id="@+id/purple_timer"
        android:layout_margin="25dp"
        android:layout_width="150dp"
        android:layout_height="150dp" />

    <com.bravebeard.circletimerview.CircleTimerView
        android:id="@+id/orange_timer"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@+id/blue_timer"/>

    <com.bravebeard.circletimerview.CircleTimerView
        android:id="@+id/green_timer"
        android:layout_width="175dp"
        android:layout_height="200dp"
        android:layout_below="@id/orange_timer"/>

</RelativeLayout>
